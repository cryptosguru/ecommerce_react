{
	"apps": [
		{
			"name": "api",
			"script": "./src/index.js",
			"cwd": "./cezerin2",
			"node_args": "-r esm",
			"watch": ["./config/server.js", "./src/"],
			"instances": "1",
			"exec_mode": "fork",
			"watch_options": {
				"persistent": true,
				"ignoreInitial": false
			}
		},
		{
			"name": "admin",
			"script": "serve",
			"cwd": "./cezerin2-admin",
			"watch": ["./config/admin.js", "./dist/"],
			"env": {
				"PM2_SERVE_PATH": "./dist",
				"PM2_SERVE_PORT": 3002
			},
			"watch_options": {
				"persistent": true,
				"ignoreInitial": false
			}
		},
		{
			"name": "store",
			"script": "./dist/server/index.js",
			"cwd": "./cezerin2-store",
			"node_args": "-r esm",
			"watch": [
				"./config/store.js",
				"./dist/store/",
				"./theme/dist/",
				"./theme/assets/index.html"
			],
			"instances": "1",
			"exec_mode": "fork",
			"watch_options": {
				"persistent": true,
				"ignoreInitial": false
			}
		}
	]
}
