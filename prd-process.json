{
	"apps": [{
			"name": "api",
			"script": "./src/index.js",
			"cwd": "./cezerin2",
			"instances": "1",
			"exec_mode": "fork",
			"node_args": "-r esm",
			"env": {
				"API_BASE_URL": "http://localhost:3001/api/v1",
				"STORE_BASE_URL": "http://localhost:3000",
				"ADMIN_BASE_URL": "http://localhost:3002",
				"ASSETS_BASE_URL": "http://localhost:3001",
				"DEVELOPER_MODE": false,
			  "NODE_ENV": "production"
			}
		}, {
			"name": "admin",
			"cwd": "./cezerin2-admin",
			"script": "serve",
			"env": {
				"PM2_SERVE_PATH": "./dist",
				"PM2_SERVE_PORT": 3002,
				"API_BASE_URL": "http://localhost:3001/api/v1",
				"ASSETS_BASE_URL": "http://localhost:3001",
				"API_WEB_SOCKET_URL": "ws://localhost:3001",
				"DEVELOPER_MODE": false,
			  "NODE_ENV": "production"
			}
		}, {
			"name": "store",
			"script": "./dist/server/index.js",
			"cwd": "./cezerin2-store",
			"node_args": "-r esm",
			"instances": "1",
			"exec_mode": "fork",
			"env": {
				"AJAX_BASE_URL": "http://localhost:3001/ajax",
				"API_BASE_URL": "http://localhost:3001/api/v1",
				"ASSETS_BASE_URL": "http://localhost:3001",
			  "NODE_ENV": "production"
			}
		}]
}
